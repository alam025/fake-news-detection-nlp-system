# =============================================================================
# FAKE NEWS DETECTION SYSTEM - ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
APP_NAME=fake_news_detection_system
APP_VERSION=1.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# MODEL CONFIGURATION
# -----------------------------------------------------------------------------
MODEL_TYPE=logistic_regression
VECTORIZER_TYPE=tfidf
MAX_FEATURES=10000
NGRAM_RANGE=(1,2)
RANDOM_STATE=42

# -----------------------------------------------------------------------------
# DATA PROCESSING SETTINGS
# -----------------------------------------------------------------------------
TRAIN_DATA_PATH=data/train.csv
TEST_DATA_PATH=data/test.csv
MODEL_SAVE_PATH=models/fake_news_model.pkl
VECTORIZER_SAVE_PATH=models/tfidf_vectorizer.pkl

# -----------------------------------------------------------------------------
# NLP PROCESSING CONFIGURATION
# -----------------------------------------------------------------------------
LANGUAGE=english
STEMMER_TYPE=porter
REMOVE_STOPWORDS=true
MIN_WORD_LENGTH=3
TEXT_PREPROCESSING=advanced

# -----------------------------------------------------------------------------
# MODEL TRAINING PARAMETERS
# -----------------------------------------------------------------------------
TEST_SIZE=0.2
VALIDATION_SPLIT=0.1
CROSS_VALIDATION_FOLDS=5
OPTIMIZATION_METRIC=f1_score

# -----------------------------------------------------------------------------
# PERFORMANCE THRESHOLDS
# -----------------------------------------------------------------------------
MIN_ACCURACY_THRESHOLD=0.90
MIN_PRECISION_THRESHOLD=0.85
MIN_RECALL_THRESHOLD=0.85
CONFIDENCE_THRESHOLD=0.7

# -----------------------------------------------------------------------------
# API CONFIGURATION (if deploying as web service)
# -----------------------------------------------------------------------------
API_HOST=localhost
API_PORT=5000
API_SECRET_KEY=your_secret_key_here
CORS_ORIGINS=*

# -----------------------------------------------------------------------------
# MONITORING AND LOGGING
# -----------------------------------------------------------------------------
ENABLE_LOGGING=true
LOG_FILE_PATH=logs/fake_news_detection.log
PERFORMANCE_MONITORING=true
ERROR_TRACKING=true

# -----------------------------------------------------------------------------
# SECURITY SETTINGS
# -----------------------------------------------------------------------------
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100
INPUT_SANITIZATION=true
TEXT_LENGTH_LIMIT=10000

# -----------------------------------------------------------------------------
# VISUALIZATION SETTINGS
# -----------------------------------------------------------------------------
GENERATE_PLOTS=true
PLOT_SAVE_PATH=visualizations/
CONFUSION_MATRIX=true
FEATURE_IMPORTANCE=true